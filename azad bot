  <br>
  <button onclick="generateSignal()">üéØ Generate Signal</button>

  <div id="result"></div>

  <script>
    async function generateSignal() {
      const ema8 = 1.234;
      const ema21 = 1.231;
      const ema50 = 1.229;
      const rsi = 28;
      const stoch_k = 15;
      const stoch_d = 10;
      const candle = "bullish engulfing";

      const payload = {
        ema8, ema21, ema50, rsi, stoch_k, stoch_d, candle
      };

      const resultBox = document.getElementById("result");
      resultBox.style.display = "block";
      resultBox.innerHTML = "‚è≥ Generating signal...";

      try {
        const res = await fetch("https://azad.azademtiaz.repl.co/signal", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(payload)
        });

        const data = await res.json();

        let signalClass = "signal-wait";
        if (data.signal === "CALL") signalClass = "signal-up";
        if (data.signal === "PUT") signalClass = "signal-down";

        resultBox.innerHTML = `
          <div class="${signalClass}">
            <strong>üìå Signal:</strong> ${data.signal}<br>
            <strong>üìä Confidence:</strong> ${data.confidence}<br>
            <strong>üß† Reason:</strong> ${data.reason}
          </div>
        `;

      } catch (err) {
        resultBox.innerHTML = `<span style="color:red;">‚ùå Error: Could not connect to server.</span>`;
      }
    }
  </script>

